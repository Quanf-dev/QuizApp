<!--            app:cardCornerRadius="10dp"-->
<!--            app:cardBackgroundColor="#673AB7"-->
<!--            >-->
<!--         -->



<!--        </androidx.cardview.widget.CardView>-->
    </LinearLayout>



</LinearLayout>
